<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quizapp.MainActivity">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:inputType="textCapWords"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/AnsTo"
            android:textSize="15sp" />

        <TextView
            style="@style/TextViewQuestions"
            android:text="@string/Quest01" />

        <RadioGroup
            android:id="@+id/rg01"
            style="@style/Radiogroups">

            <RadioButton
                style="@style/RadioButtons"
                android:text="@string/Ans01A" />

            <RadioButton
                style="@style/RadioButtons"
                android:text="@string/Ans01B" />

            <RadioButton
                style="@style/RadioButtons"
                android:text="@string/Ans01C" />
        </RadioGroup>

        <TextView
            style="@style/TextViewQuestions"
            android:text="@string/Quest02" />

        <CheckBox
            android:id="@+id/chkReturn"
            style="@style/Checkboxes"
            android:text="@string/Ans02A" />

        <CheckBox
            android:id="@+id/chkAttack"
            style="@style/Checkboxes"
            android:text="@string/Ans02B" />

        <CheckBox
            android:id="@+id/chkBeyond"
            style="@style/Checkboxes"
            android:text="@string/Ans02C" />


        <TextView
            style="@style/TextViewQuestions"
            android:text="@string/Quest03" />

        <RadioGroup
            android:id="@+id/rg03"
            style="@style/Radiogroups">

            <RadioButton
                style="@style/RadioButtons"
                android:text="@string/Ans03A" />

            <RadioButton
                style="@style/RadioButtons"
                android:text="@string/Ans03B" />

            <RadioButton
                style="@style/RadioButtons"
                android:text="@string/Ans03C" />
        </RadioGroup>

        <TextView
            style="@style/TextViewQuestions"
            android:text="@string/Quest04" />

        <RadioGroup
            android:id="@+id/rg04"
            style="@style/Radiogroups">

            <RadioButton
                style="@style/RadioButtons"
                android:text="@string/Ans04A" />

            <RadioButton
                style="@style/RadioButtons"
                android:text="@string/Ans04B" />

            <RadioButton
                style="@style/RadioButtons"
                android:text="@string/Ans04C" />
        </RadioGroup>

        <TextView
            style="@style/TextViewQuestions"
            android:text="@string/Quest05" />

        <RadioGroup
            android:id="@+id/rg05"
            style="@style/Radiogroups">

            <RadioButton
                style="@style/RadioButtons"
                android:text="@string/Ans05A" />

            <RadioButton
                style="@style/RadioButtons"
                android:text="@string/Ans05B" />

            <RadioButton
                style="@style/RadioButtons"
                android:text="@string/Ans05C" />
        </RadioGroup>

        <Button
            android:id="@+id/btnSubmit"
            style="@style/Buttons"
            android:text="@string/BtnSubmit" />

    </LinearLayout>

</ScrollView>
